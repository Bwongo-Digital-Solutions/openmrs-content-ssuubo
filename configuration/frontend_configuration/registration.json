{
  "pages": [
    {
      "id": "patient-registration",
      "label": "Patient Registration",
      "sections": [
        {
          "id": "identifiers",
          "label": "Identifiers",
          "questions": [
            {
              "id": "primaryIdentifier",
              "type": "patientIdentifier",
              "label": "Patient Identifier",
              "patientIdentifierTypeUuid": "REPLACE-WITH-PRIMARY-ID-UUID",
              "required": true
            }
          ]
        },

        {
          "id": "demographics",
          "label": "Demographics",
          "questions": [
            { "id": "givenName", "type": "name", "required": true },
            { "id": "familyName", "type": "name", "required": true },

            {
              "id": "gender",
              "type": "gender",
              "label": "Sex",
              "required": true,
              "allowedGenders": ["M", "F"]
            },

            {
              "id": "birthdate",
              "type": "date",
              "required": true
            },

            {
              "id": "estimatedAge",
              "type": "estimatedAge"
            },

            {
              "id": "dead",
              "type": "deathStatus"
            },

            {
              "id": "deathDate",
              "type": "date",
              "showIf": {
                "questionId": "dead",
                "equals": true
              }
            },

            {
              "id": "address",
              "type": "address",
              "label": "Address"
            },

            {
              "id": "photo",
              "type": "photo",
              "label": "Patient Photograph"
            }
          ]
        },

        {
          "id": "contacts",
          "label": "Contacts & Notes",
          "questions": [
            {
              "id": "contactNumbers",
